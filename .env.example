# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:8000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/orient_lms
DB_NAME=orient_lms

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Email Configuration (for notifications and reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@orient.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@orient.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Compliance Configuration
POLICY_RETENTION_DAYS=2555
TRAINING_COMPLETION_DEADLINE_DAYS=30
REMINDER_FREQUENCY_DAYS=7