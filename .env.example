# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:8000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/orient_lms
DB_NAME=orient_lms

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Email Configuration (for notifications and reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@orient.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@orient.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Compliance Configuration
POLICY_RETENTION_DAYS=2555
TRAINING_COMPLETION_DEADLINE_DAYS=30
REMINDER_FREQUENCY_DAYS=7

# OneDrive / Microsoft Graph Storage (optional)
# Set STORAGE_PROVIDER=onedrive to store files in OneDrive via Microsoft Graph.
STORAGE_PROVIDER=local
ONEDRIVE_TENANT_ID=
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=
ONEDRIVE_TARGET_UPN=
ONEDRIVE_BASE_FOLDER=LMS/Uploads
ONEDRIVE_UPLOAD_CHUNK_MB=5
ONEDRIVE_TIMEOUT_MS=30000

# Authentication Provider
# Set to 'ad' to enable Active Directory login; 'local' uses MongoDB users
AUTH_PROVIDER=local

# Active Directory (LDAP)
# For LDAP:  ldap://DC-AD-01.orient-power.com:389
# For LDAPS: ldaps://DC-AD-01.orient-power.com:636
AD_URL=
AD_DOMAIN=
AD_BASE_DN=
# Optional: NetBIOS short domain, e.g., ORIENT
AD_NETBIOS=
# Optional: map AD groups to app roles (full DNs)
AD_COMPLIANCE_GROUP_DN=
AD_ADMIN_GROUP_DN=
# If using LDAPS with internal CA, set to 'false' to accept untrusted cert
# AD_REJECT_UNAUTHORIZED=true